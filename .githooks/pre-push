#!/bin/bash
set -e

# Define colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸ” Running Terraform validation checks...${NC}"

# Run terraform fmt check
echo -e "${BLUE}ğŸ“ Checking Terraform formatting...${NC}"
if ! terraform fmt -check -recursive; then
  echo -e "${RED}âŒ Terraform formatting check failed! Please run 'terraform fmt' to fix.${NC}"
  exit 1
fi

# Optionally run tflint if installed
if command -v tflint &>/dev/null; then
  echo -e "${BLUE}ğŸ” Running tflint...${NC}"
  if ! tflint --init; then
    echo -e "${RED}âŒ There was an issue with tflint --init!${NC}"
    exit 1
  fi
  if ! tflint; then
    echo -e "${RED}âŒ TFLint found issues in your Terraform files!${NC}"
    exit 1
  fi
fi

if command -v terraform init &>/dev/null; then
  echo -e "${BLUE}ğŸ” Initializing Terraform...${NC}"
  if ! terraform init; then
    echo -e "${RED}âŒ Terraform init failed!${NC}"
    exit 1
  fi
fi

if command -v terraform validate &>/dev/null; then
  echo -e "${BLUE}ğŸ” Validating Terraform configuration...${NC}"
  if ! terraform validate; then
    echo -e "${RED}âŒ Terraform validation failed!${NC}"
    exit 1
  fi
fi

echo -e "${GREEN}âœ… All Terraform checks passed! Ready to push.${NC}"
exit 0